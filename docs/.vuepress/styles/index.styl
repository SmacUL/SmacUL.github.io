.theme-default-content:not(.custom) img {
    max-width: 90%;
    display: block;
    margin: 15px auto;
    box-shadow: 0px 0px 15px 2px #aaa
}

.theme-default-content.custom img {
    max-width: 60%;
    display: block;
    margin: 15px 0px;
    box-shadow: 0px 0px 15px 2px #aaa
}

strong {
    font-weight: 600;
    color: #c05600;
}

.theme-default-content code {
    color: #7c1a00;
    background-color: rgba(27,31,35,0.05);
}

.theme-default-content.custom.content__default h1 {
    color: #2c3e50
}

.theme-default-content.custom.content__default h2 {
    color: #2c3e50
}

